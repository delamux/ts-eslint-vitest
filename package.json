{
  "author": "luisdelamo.dev",
  "license": "MIT",
  "name": "ts-eslint-vitest",
  "version": "1.0.0",
  "description": "TypeScript template with ESLint, Neostandard and Vitest",
  "type": "module",
  "main": "lib/index.js",
  "scripts": {
    "prepare": "husky install",
    "dev": "tsc --watch",
    "build": "npm run clean && tsc -b",
    "clean": "rm -rf dist coverage",
    "analyze": "npm run lint:fix && npm run compile",
    "compile": "tsc --noEmit",
    "compile:watch": "tsc --noEmit --watch",
    "compile:build": "tsc -b",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint-staged": "lint-staged",
    "lint-staged:debug": "lint-staged --debug",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage",
    "validate": "npm run compile && npm run lint && npm run test",
    "upgrade": "ncu -i",
    "upgrade:all": "ncu -u"
  },
  "devDependencies": {
    "@types/node": "24.1.0",
    "@vitest/coverage-v8": "3.0.5",
    "eslint": "^9.32.0",
    "eslint-plugin-import": "^2.32.0",
    "husky": "9.1.7",
    "lint-staged": "16.1.2",
    "neostandard": "^0.12.2",
    "npm-check-updates": "18.0.2",
    "typescript": "5.8.3",
    "vitest": "3.0.5"
  },
  "lint-staged": {
    "*.+(ts|tsx)": [
      "eslint --fix"
    ]
  }
}
